@model IEnumerable<GestaoVendas.Cap03.Models.Cliente>

@{
    ViewBag.Title = "Listar";
}

<h2>Listar</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Documento)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Telefone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Documento)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Nome)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Telefone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.ActionLink("Editar", "Alterar", new { id=item.Documento  }, new { @class = "btn btn-outline-warning" }) |
            @Html.ActionLink("Detalhes", "Detalhes", new { id = item.Documento }, new { @class = "btn btn-outline-primary" }) |
            @Html.ActionLink("Excluir", "Remover", new { id = item.Documento }, new { @class = "btn btn-outline-danger" }) |
        </td>
    </tr>
}

</table>
